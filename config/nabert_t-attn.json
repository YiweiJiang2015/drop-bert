{
    "dataset_reader": {
        "type": "pickled"
    },
    "iterator": {
        "type": "basic",
        "batch_size": 4
    },
    "model": {
        "type": "nabertT",
        "bert_pretrained_model": "bert-base-uncased",
        "dropout_prob": 0.1,
        "special_numbers":[100,1],
        "number_rep": "attention"
    },
    "train_data_path": "storage/data/drop_dataset_train.pkl",
    "validation_data_path": "storage/data/drop_dataset_dev.pkl",
    "trainer": {
        "cuda_device": 2,
        "keep_serialized_model_every_num_seconds": 3600,
        "num_epochs": 20,
        "optimizer": {
            "type": "bert_adam",
            "lr": 1e-05
        },
        "patience": 10,
        "summary_interval": 100,
        "validation_metric": "+f1"
    }
}


